<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Invoice Example</title>
    <link rel="stylesheet" href="../../Public/stylesheets/style.css" />

</head>
<style>
    tr {
        text-align: left;
    }

    .divName {
        width:
            120px;
        text-align: left;
        margin: 0;
        padding: 0;
    }

    .billno {
        /* border: 2px
    solid black; */
        width: 100px;
        text-align: left;
        margin: 0;
        padding: 0;
    }

    .billdata {
        /* border: 2px solid black; */
        width: 170px;
        text-align: left;
        margin: 0;
        padding: 0;
    }

    h3 {
        padding: 0;
        font-size: 12px;
        text-align: left;
    }

    h4 {
        padding:
            0;
        font-size: 11px;
        text-align: left;
    }

    p b {
        text-align: left;

    }

    .amountTotal {
        width: 110px;
    }

    .no {
        width: 70px;
    }

    .description {
        width: 205px;
    }

    .hsn {
        width: 90px;
    }

    .weight {
        width: 90px;
    }

    .rate {
        width: 90px;
    }

    .amount {
        width: 90px;
    }

    .item {
        height: 40px;
    }

    .taxableamount {
        width:
            93px;
    }

    .taxableamountdata {
        width: 90px;
    }

    .companyName {

        font-size: 12px;
        text-align: end;
        font-weight: bold;
        height: 40px;
    }

    .customer_signature {
        padding: 0;
        font-size: 12px;
        text-align: right;
        padding-top: 20px;

    }

    .authorized_signature {
        padding: 0;
        font-size: 12px;
        text-align: end;
    }

    .invoice-box {
        max-width: 100%;
        margin: auto;
        padding: 30px 30px 0 30px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
        font-size: 13px;
        line-height: 24px;
        font-family: "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;
        color: #555;
    }

    .invoice-box table {
        width: 100%;
        line-height: inherit;
        text-align: left;
    }

    .invoice-box table td {
        padding: 5px;
        vertical-align: top;
    }

    .invoice-box table tr td:nth-child(2) {
        text-align: right;
    }

    .invoice-box table tr.top table td {
        padding-bottom: 20px;
    }

    .invoice-box table tr.top table td.title {
        font-size: 25px;
        line-height: 45px;
        color: #333;
    }

    .invoice-box table tr.information table td {
        padding-bottom: 40px;
    }

    .invoice-box table tr.heading td {
        background: #eee;
        border-bottom: 1px solid #ddd;
        font-weight: bold;
    }

    .invoice-box table tr.details td {
        padding-bottom: 20px;
    }

    .invoice-box table tr.item td {
        border-bottom: 1px solid #eee;
    }

    .invoice-box table tr.item.last td {
        border-bottom: none;
    }

    .invoice-box table tr.total td:nth-child(2) {
        border-top: 2px solid #eee;
        font-weight: bold;
    }

    @media only screen and (max-width: 600px) {
        .invoice-box table tr.top table td {
            width: 100%;
            display: block;
            text-align: center;
        }

        .invoice-box table tr.information table td {
            width: 100%;
            display: block;
            text-align: center;
        }
    }

    /** RTL **/
    .invoice-box.rtl {
        direction: rtl;
        font-family: Tahoma, "Helvetica Neue", "Helvetica", Helvetica, Arial,
            sans-serif;
    }

    .invoice-box.rtl table {
        text-align: right;
    }

    .invoice-box.rtl table tr td:nth-child(2) {
        text-align: left;
    }
</style>

<body>
    <div class="invoice-box">
        <div style="text-align: right;">
            <b>Original</b>
        </div>
        <table cellpadding="0" border="1px solid #000" cellspacing="0">
            {{#each invoiceDataDummy}}
            <tr>
                <td class="divName">
                    <b>Name</b>
                </td>
                <td>
                    <p>{{this.customer_name}}</p>
                </td>
                <td class="billno">
                    <b>Bill No</b>
                </td>
                <td class="billdata">
                    <p>{{this.bill_no}}</p>
                </td>
            </tr>

            <tr>
                <td>
                    <b>Address</b>
                </td>
                <td>
                    <p>{{this.customer_address}}</p>
                </td>

                <td>
                    <b>Date</b>
                </td>
                {{/each}}
                {{#each date}}
                <td>
                    <p>{{this.date}}</p>
                </td>
                {{/each}}
                {{#each invoiceDataDummy}}
            </tr>
            <tr>
                <td>
                    <b>Mobile No.</b>
                </td>
                <td>
                    <p>{{this.customer_mobile_no}}</p>
                </td>
                <td>
                    <b>G. S. T. No</b>
                </td>
                <td>
                    <p>{{this.gst}}</p>
                </td>
            </tr>
            <tr>
                <td>
                    <b>Customer GST No.</b>
                </td>
                <td colspan="3">
                    <p>{{this.customer_gst_no}}</p>
                </td>
            </tr>
            {{/each}}
        </table>
        <table cellpadding="0" border="1px solid #000" cellspacing="0" class="invoice">
            <tr>
                <td class="no">
                    <b>NO</b>
                </td>
                <td class="description">
                    <b>ITEM DESCRIPTION</b>
                </td>
                <td class="hsn">
                    <b>HSN</b>
                </td>
                <td class="weight">
                    <b>NET WEIGHT [In Grams]</b>
                </td>
                <td class="rate">
                    <b>RATE</b>
                </td>
                <td class="amount">
                    <b>AMOUNT</b>
                </td>
            </tr>
            {{#each test}}
            <tr class="item">
                <td>
                    <p> {{this.bill_no}}</p>
                </td>
                <td>
                    <p>{{this.product_name}}</p>
                </td>

                <td>
                    <p>{{this.hsn}}</p>
                </td>
                <td>
                    <p>{{this.weight}}</p>
                </td>
                <td>
                    <p>{{this.rate}}</p>
                </td>
                <td>
                    <p>{{this.amount}}</p>
                </td>
            </tr>
            {{/each}}
            {{#each invoiceDataDummy}}
            <tr class="item">
                <td></td>
                <td>
                    <b>Total</b>
                </td>
                <td></td>
                <td>
                    <p>14.7</p>
                </td>
                <td>
                    <p>92</p>
                </td>
                <td>
                    <p>{{this.taxable_amount}}</p>
                </td>
            </tr>
            {{/each}}
            <tr class="item">
                {{#each toWords}}
                <td colspan="4" rowspan="5">
                    <p> <b> Rs in words:</b> {{this.toWords}} Only
                    </p>
                    <hr />
                    <p>
                        Terms & Conditions:
                        <li>
                            Payment will not be refunded once the bill is generated
                        </li>
                        <li>
                            No gurantee will be given any 92.5 jewellery
                        </li>
                        <li>
                            Ahmedabad will be jurisdiction for any process
                        </li>
                        <li>
                            Apologies for mistakes
                        </li>
                    </p>
                </td>
                {{/each}}
                {{#each invoiceDataDummy}}
                <td class="taxableamount">
                    <p>Taxable Amount</p>
                </td>
                <td class="taxableamountdata">
                    <b>{{this.taxable_amount}}</b>
                </td>
            </tr>
            <tr>
                <td class="taxableamount">
                    <p>SGST 1.50%</p>
                </td>
                <td class="taxableamountdata">
                    <b>{{this.sgst}}</b>
                </td>
            </tr>

            <tr>
                <td class="taxableamount">
                    <p>CGST 1.50%</p>
                </td>
                <td class="taxableamountdata">
                    <b>{{this.cgst}}</b>
                </td>
            </tr>
            <tr>
                <td class="taxableamount">
                    <p>Discount</p>
                </td>
                <td class="taxableamountdata">
                    <b>{{this.discount}}</b>
                </td>
            </tr>
            <tr>
                <td class="taxableamount">
                    <p>Bill Amount</p>
                </td>
                <td class="taxableamountdata">
                    <b>{{this.bill_amount}}</b>
                </td>
            </tr>
            {{/each}}

            <tr>
                <td colspan="6">
                    <div class="companyName">
                        For, SILVER PALACE
                    </div>
                    <div>
                        <div class="customer_signature">
                            Customer Signature, &nbsp; &nbsp; &nbsp; Authorized Signature
                        </div>
                    </div>
                </td>
            </tr>
        </table>
        <div style="page-break-before:always">&nbsp;</div>

    </div>

</body>

</html>